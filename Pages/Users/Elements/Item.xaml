<UserControl x:Class="WpfApp26.Pages.Users.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp26.Pages.Users.Elements"
             mc:Ignorable="d">
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Width="80" Height="80" VerticalAlignment="Top" Margin="10" Source="/Images/ic_user.png"/>
        <Button Click="AddUser" Height="25" Content="Изменить" VerticalAlignment="Top" Margin="10,95,10,0"
    Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
        <Button Click="DelteUser" Height="25" Content="Удалить" VerticalAlignment="Top" Margin="10,125,10,0"
    Background="#FFCD1E1E" BorderBrush="#FFCD1E1E" Foreground="White"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Дата аренды" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <DatePicker x:Name="RentStart" VerticalAlignment="Top" Margin="10,36,10,0" Height="25" VerticalContentAlignment="Center" IsEnabled="False"/>
            <Label Content="Время аренды" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,66,0,0"/>
            <TextBox x:Name="RentTime" VerticalAlignment="Top" Margin="10,92,10,0" Height="25" VerticalContentAlignment="Center" IsEnabled="False"/>
            <Label Grid.Column="1" Content="Продолжительность" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <TextBox Grid.Column="1" x:Name="Duration" VerticalAlignment="Top" Margin="10,36,10,0" Height="25" VerticalContentAlignment="Center" IsEnabled="False"/>
            <Label Grid.Column="1" Content="Клуб" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,66,0,0"/>
            <TextBox Grid.Column="1" x:Name="Club" VerticalAlignment="Top" Margin="10,92,10,0" Height="25" VerticalContentAlignment="Center" IsEnabled="False"/>
            <Label Content="ФИО" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,122,0,0"/>
            <TextBox x:Name="FIO" VerticalAlignment="Top" Margin="10,148,10,10" Height="25" VerticalContentAlignment="Center" Grid.ColumnSpan="2" IsEnabled="False"/>
        </Grid>
    </Grid>
</UserControl>
